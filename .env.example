# Rate Limiting Configuration
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true
NEXT_PUBLIC_RATE_LIMIT_DEBUG=true

# Cache TTL Settings (in minutes)
NEXT_PUBLIC_STATIC_CACHE_TTL=360    # 6 hours for static content
NEXT_PUBLIC_PRODUCTS_CACHE_TTL=10    # 10 minutes for products
NEXT_PUBLIC_SITE_CONFIG_CACHE_TTL=60 # 1 hour for site config
NEXT_PUBLIC_CART_CACHE_TTL=2         # 2 minutes for cart data

# Request Settings
NEXT_PUBLIC_MAX_CONCURRENT_REQUESTS=3
NEXT_PUBLIC_DEFAULT_DEBOUNCE_MS=500
NEXT_PUBLIC_MAX_RETRIES=3

# Development overrides
NEXT_PUBLIC_DEV_CACHE_MULTIPLIER=0.2    # 20% of normal cache time in dev
NEXT_PUBLIC_DEV_DEBOUNCE_MULTIPLIER=0.5 # 50% of normal debounce in dev